@using DBMS.Models
@model DBMS.Models.Member

@{
    ViewBag.Title = "PersonDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container " style="margin-top:30px; ">

    <div class="row border mt-1">


        <div class="col  h-50  d-inline-block">
            <div id="demo" class="carousel slide" data-ride="carousel">

                <div class="carousel-inner">
                    <div class="carousel-item active">
                        @{
                            DBMSEntities2 db = new DBMSEntities2();
                            var query = from a in db.Member
                                        where a.Social_ID == @Model.Social_ID
                                        select @Model.Member_picture;

                            var result = query.FirstOrDefault();

                            var base64 = Convert.ToBase64String(@Model.Member_picture);
                            var imgsrc = string.Format("data:image/gid;base64,{0}", base64);
                        }





                        <img src="@imgsrc" class="rounded" alt="person" width="600" height="500" />
                        <div class="carousel-caption">

                        </div>
                    </div>

                </div>
                
            </div>

        </div>
        <div class="col   h-50  d-inline-block">

            <h1>Ad Heading</h1>
            <div class="col   h-50  d-inline-block">

                <div class=" pt-4"><a>Name : @Model.Name</a></div>
                <div class=" pt-4"><a>Surname : @Model.Surname</a></div>
                <div class=" pt-4"><a> Birthdate:  @Model.Birthdate.Day/@Model.Birthdate.Month/@Model.Birthdate.Year</a></div>
                <div class=" pt-4"><a>E-mail : @Model.Email</a></div>
                <div class=" pt-4">
                    Preference:

                    @if (Model.Member_Type)
                    {
                        <a>Looking for Flatmate </a>
                    }
                    else
                    {
                        <a>Looking for Home </a>
                    }
                </div>
                <div class=" pt-4">
                    <a>
                        Gender:
                        @if (Model.Gender)
                        {
                            <a>Man</a>
                        }
                        else
                        {
                            <a>Women</a>
                        }
                    </a>
                </div>


            </div>

        </div>





    </div>

    <div class="row border mt-5 jumbotron" style="background-color: #A7A5A4;">


        <div >

            <h1> ABOUT ME</h1>
            <p style="width: 950px; word-wrap: break-word;">
                @Model.Member_bio
            </p>


        </div>
    </div>

