@model DBMS.Models.Adress

@{
    ViewBag.Title = "GetAddressInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("GetAddressInfo", "ImageUpload", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-row">
        <div class="form-group col-md-4">

        </div>
        <h3>Address Information</h3>

    </div>
    <div class="pt-3">
        <div class="form-row">
            <div class="form-group col-md-4">

            </div>
            <div class="form-group col-md-3">
                <label for="">Neighbourhood</label>
                <div class="form-group">


                    @Html.EditorFor(model => model.Neighbourhood, new { htmlAttributes = new { @class = "form-control", placeholder = "Neighbourhood" } })
                    @Html.ValidationMessageFor(model => model.Neighbourhood, "", new { @class = "text-danger" })
                </div>

            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">

            </div>
            <div class="form-group col-md-3">
                <label for="">District</label>
                <div class="form-group">


                    @Html.EditorFor(model => model.District, new { htmlAttributes = new { @class = "form-control", placeholder = "District" } })
                    @Html.ValidationMessageFor(model => model.District, "", new { @class = "text-danger" })
                </div>

            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">

            </div>
            <div class="form-group col-md-3">
                <label for="">City</label>
                <div class="form-group">


                    @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", placeholder = "City" } })
                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                </div>

            </div>
        </div>




    </div>
    <div class="form-row">
        <div class="form-group col-md-5">

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-secondary btn-lg m-1" style="display: inline;"> Next</button>
            </div>
        </div>
    </div>


}

